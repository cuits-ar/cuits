{
  "compilerOptions": {
    "sourceMap": true,
    "lib": ["esnext"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "~/*": ["./src/*"]
    }

    // Remix takes care of building everything in `remix build`.
    //"noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
